/**
 * Rebounce Online
 */

$heading-font = Quicksand, sans-serif
$content-font = 'Open Sans', sans-serif

$primary-color = #cc6767
$primary-highlight-color = #a75454
$heading-color = #2e3339
$content-color = #666e75
$divider-color = #dadee2

body
    padding-top: 54px
    font-family: $content-font
    color: $content-color
    text-align: justify

h1, h2, h3
    font-family: $heading-font
    font-weight: bold
    color: $heading-color
    text-transform: uppercase

h1
    font-size: 6rem
    line-height: 0.9em

h2
    font-size: 3.2rem

h3
    font-size: 1.8rem

section
    padding-top: 6rem !important
    padding-bottom: 6rem !important
    border-bottom: 1px solid $divider-color

    .section-content
        margin: auto 15%

    .content
        min-width: 0

    @media (min-width: 768px)
        min-height: 100vh

        .content
            min-width: 18rem

a
    color: $primary-color
    &:hover, &:focus, &:active
        color: $primary-highlight-color

.bg-primary
    background-color: $primary-color !important

.text-primary
    color: $primary-color !important

.no-border
    border: none

.brand
    text-transform: uppercase

.subheading
    font-family: $heading-font
    font-size: 1.4rem
    text-transform: uppercase

.nav-link
    text-transform: uppercase

.contact-link
    font-size: 1.2rem
    text-decoration: none !important

    .fab, .fas
        font-size: 10rem

@media (max-width: 768px)
    h1
        font-size: 3.5rem

    h2
        font-size: 2.5rem

    h3
        font-size: 1.5rem

    .subheading
        font-size: 1.0rem

@media (min-width: 992px)
    body
        padding-top: 0
        padding-left: 20rem

    section
        padding-top: 2rem !important
        padding-bottom: 2rem !important

    #nav
        display: flex
        flex-direction: column
        position: fixed
        top: 0
        left: 0
        width: 20rem
        height: 100vh
        text-align: center

        .navbar-brand
            display: flex
            margin: auto auto 0
            padding: 0.5rem

            .img-brand
                max-width: 12rem
                max-height: 12rem
                border: 0.75rem solid rgba(255, 255, 255, 0.3)

        .navbar-collapse
            display: flex
            align-items: flex-start
            flex-grow: 0
            width: 100%
            margin-bottom: auto

        .navbar-collapse .navbar-nav
            flex-direction: column
            width: 100%

        .navbar-collapse .navbar-nav
            .nav-item, .nav-item .nav-link
                display: block
